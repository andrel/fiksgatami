<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fillViewport="true">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="10dip">

		<ImageButton android:id="@+id/image_preview"
		             style="@style/ImageButton"
		             android:contentDescription="@string/image_preview_description"
		             android:src="@drawable/street_background_smaller"
		/>
		<Button android:id="@+id/camera_button"
		        style="@style/Widget.FgmButton"
		        android:text="@string/take_photo"
		/>

		<Button android:id="@+id/gallery_button"
		        style="@style/Widget.FgmButton"
		        android:text="@string/choose_photo"
		/>

		<EditText android:id="@+id/submission_title"
		          style="@style/FgmEditText"
		          android:text="@string/submission_title"
		/>

		<Button android:id="@+id/position_button"
		        style="@style/Widget.FgmButton"
		        android:text="@string/find_position"
		/>

		<View android:layout_width="1dip" android:layout_height="10dip"
			android:src="@drawable/spacer" />
			
		<TextView
				style="@style/FgmTextView"
		        android:textColor="#87190f"
		        android:id="@+id/progress_text"
		        android:text="@string/awaiting_gps"
		/>

		<TextView android:id="@+id/debug_text"
		          style="@style/FgmTextView"
		          android:text="@string/debug_text" />

        <ProgressBar android:id="@+id/loading"
                     android:indeterminate="true"
                     android:visibility="gone"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginTop="4dip"
                     style="@android:style/Widget.ProgressBar.Inverse"
                     />

		<Button android:id="@+id/report_button"
		        style="@style/Widget.FgmButton"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/report"
		/>

		<TextView android:layout_width="fill_parent"
		          style="@style/FgmTextView"
		          android:layout_weight="1"
		          android:layout_height="0dp"
		          android:text=" "
		/>

	</LinearLayout>

</ScrollView>
